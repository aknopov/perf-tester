    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch current",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": ["--params=Cpu,Mem,PIDs", "-refresh=1.5", "server-app"],
